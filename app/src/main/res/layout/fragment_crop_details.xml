<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CropDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_10sdp"
            android:id="@+id/container"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cropImage"
                app:srcCompat="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"/>

        </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ttv_cropName"
        tools:text="Tomato (Seller Name) 40Rs/Kg"
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_20ssp"
        android:textColor="?colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ttv_cropDetails"
        app:layout_constraintTop_toBottomOf="@id/ttv_cropName"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        tools:text = "Crop Details"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ttv_location"
        app:layout_constraintTop_toBottomOf="@id/ttv_cropDetails"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/_13ssp"
        android:textStyle="italic"
        android:layout_margin="@dimen/_20sdp"
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/locationDetails"
            app:layout_constraintTop_toBottomOf="@id/ttv_location"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="@id/ttv_location"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginEnd="@dimen/_20sdp"
            android:text = "Season"
            android:textStyle="italic"
            android:textSize="@dimen/_13ssp"
            android:id="@+id/ttv_cropSeason"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ttv_location"
            app:layout_constraintBottom_toBottomOf="@id/ttv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/seasonDetails"
            app:layout_constraintTop_toBottomOf="@id/ttv_cropSeason"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/ttv_cropSeason"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuy"
            app:layout_constraintTop_toBottomOf="@id/locationDetails"
            android:layout_margin="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            app:cornerRadius="@dimen/_10sdp"
            android:text="Buy"
            android:textSize="@dimen/_16ssp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>